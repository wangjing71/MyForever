<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:background="@color/tabcolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_size_0100dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="@dimen/com_size_0280dp"
            android:layout_height="@dimen/com_size_0070dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:clickable="true"
                android:id="@+id/music"
                android:layout_width="0dp"
                android:layout_height="@dimen/com_size_0070dp"
                android:layout_weight="1"
                android:background="@drawable/background_music_select"
                android:gravity="center"
                android:textColor="@color/tabcolor"
                android:text="音乐"
                 />

            <TextView
                android:clickable="true"
                android:id="@+id/player"
                android:layout_width="0dp"
                android:layout_height="@dimen/com_size_0070dp"
                android:layout_weight="1"
                android:background="@drawable/background_player_normal"
                android:gravity="center"
                android:text="播放器"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>